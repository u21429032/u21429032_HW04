
@{
    ViewBag.Title = "GiftOfThegivers";
    
}

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h1>Add HealtCare Centers</h1>
            <br />
            <form action="addHealtCare" method="post">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Name">
                    <small id="Name" class="form-text text-muted">Health Center Name.</small>
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    <input type="text" class="form-control" name="Description" placeholder="Description">
                    <small id="Description" class="form-text text-muted">Health Center Description.</small>
                </div>
                <div class="form-group">
                    <label for="Location">Location</label>
                    <input type="text" class="form-control" name="Location" placeholder="Location">
                    <small id="Location" class="form-text text-muted">Health Center Location.</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>

        <div class="col-sm-4">

            <h1> Add Petients under Medication</h1>
            <br />
            <form action="addMedicene" method="post">
                <div class="form-group">
                    <label for="medName">Medication Name</label>
                    <input type="text" class="form-control" name="medName" placeholder="Medication Name">
                    <small id="medName" class="form-text text-muted">Medication Name.</small>
                </div>
                <div class="form-group">
                    <label for="medPetient">Patient Name</label>
                    <input type="text" class="form-control" name="medPetient" placeholder="Patient Name">
                    <small id="medPetient" class="form-text text-muted">Patient Name.</small>
                </div>
                <div class="form-group">
                    <label for="medType">Medication Type</label>
                    <input type="text" class="form-control" name="medType" placeholder="Medication Type">
                    <small id="medType" class="form-text text-muted">Medication Type.</small>
                </div>
                <div class="form-group">
                    <label for="prescription">Medication prescription</label>
                    <input type="text" class="form-control" name="prescription" placeholder="Medication prescription">
                    <small id="prescription" class="form-text text-muted">Medication prescription.</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
        <div class="col-sm-4">
          
            <h1>Add Vaccinated Patients</h1> 
            <br />
                <div class="card-body">
                    <form action="addVaccine" method="post">
                        <div class="form-group">
                            <label for="vacName">Vaccine Name</label>
                            <input type="text" class="form-control" name="vacName" placeholder="Vaccine Name">
                            <small id="vacName" class="form-text text-muted">Please Enter vaccine Name.</small>
                        </div>
                        <div class="form-group">
                            <label for="vacPatient">Patient Name</label>
                            <input type="text" class="form-control" name="vacPatient" placeholder="Patient Name">
                            <small id="vacPatient" class="form-text text-muted">Patient Name.</small>
                        </div>
                        <div class="form-group">
                            <label for="vacDescription">Vaccine Description</label>
                            <input type="text" class="form-control" name="vacDescription" placeholder="Vaccine Description">
                            <small id="vacDescription" class="form-text text-muted">Please Enter vaccine Description.</small>
                        </div>
                        <div class="form-group">
                            <label for="vacType">Vaccine Type</label>
                            <input type="text" class="form-control" name="vacType" placeholder="Vaccine Type">
                            <small id="vacType" class="form-text text-muted">Please Enter vaccine type.</small>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>